@model IEnumerable<RBAC.Models.User>
@{
    ViewBag.Title = "用户角色管理";
}
@Html.ActionLink("新增", "Create", null, new { id = "create" })
<table>
    <tr>
        <th>用户名称</th>
        <th>角色名称</th>
        <th>操作</th>
    </tr>

    @foreach (var user in Model)
    {
        foreach (var role in user.Roles)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@role.Name</td>
                <td style="width: 100px;">
                    @Html.ActionLink("编辑", "Edit", new { userId = user.Id, roleId = role.Id }, new { @class = "edit" })
                    @Html.ActionLink("删除", "Delete", new { userId = user.Id, roleId = role.Id }, new { @class = "delete" })
                </td>
            </tr>
        }
    }
</table>
@section Script
{
    <script>
        $(function () {
            $('#create').click(function (event) {
                layer.open({
                    type: 2,
                    title: '@ViewBag.Title',
                    shadeClose: true,
                    shade: false,
                    area: ['500px', '400px'],
                    content: '@Url.Action("Create")'
                });
                event.preventDefault();
            });

            $('.edit').click(function (event) {
                var href = $(this).attr("href");
                layer.open({
                    type: 2,
                    title: '@ViewBag.Title',
                    shadeClose: true,
                    shade: false,
                    area: ['500px', '400px'],
                    content: href
                });
                event.preventDefault();
            });
            $('.delete').click(function (event) {
                var href = $(this).attr("href");
                layer.msg('是否确定删除', {
                    icon: 6
                            , btn: ['是', '否'],
                    yes: function (index1) {
                        $.ajax({
                            url: href,
                            type: 'post',
                            success: function () {
                                layer.close(index1);
                                window.location.reload();
                            }
                        })
                    }
                });
                event.preventDefault();
            });
        });
    </script>
}			